{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"outDir": "./built",
		"baseUrl": "./",
		"typeRoots": [
			"../node_modules/@types",
		],
		"lib": [
			"esnext"
		],
		"types": ["jest", "node"]
	},
	"compileOnSave": false,
	"include": [
		"daemon.ts",
		"./test/**/*.ts"
	]
}
