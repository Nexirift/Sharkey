{
	"extends": "../../shared/tsconfig.node.json",
	"compilerOptions": {
		"types": ["jest", "node"],
		"outDir": "./built",
		"sourceMap": true,
		"verbatimModuleSyntax": false,
		"removeComments": false,
		"paths": {
			"@/*": ["../src/*"]
		},
		"typeRoots": [
			"../node_modules/@types",
			"../src/@types"
		]
	},
	"include": [
		"./**/*.ts",
		"../src/**/*.test.ts",
		"../src/@types/**/*.ts"
	]
}
